{
  "name": "tg-resources",
  "version": "1.0.0",
  "description": "Abstractions on-top of `superagent` (or other Ajax libaries) for communication with REST.",
  "main": "lib.js",
  "files": [
    "dist/",
    "src/",
    "lib.js",
    "index.js"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint src test",
    "check": "npm run lint -s",
    "watch": "watch 'npm run build' src test",
    "test": "NODE_ENV=test nyc --require babel-register mocha -u exports test/*.js",
    "coverage": "nyc report && nyc report --reporter=html",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "prebuild": "npm run clean -s",
    "build": "babel --optional runtime src -d dist",
    "postbuild": "npm run check -s && npm run test",
    "deploy": "git pull --rebase origin master && git push origin master",
    "toc": "doctoc --github --title \"# Changelog\" CHANGELOG.md",
    "prerelease": "npm run build -s",
    "release": "node ./scripts/release.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thorgate/tg-resources.git"
  },
  "keywords": [
    "api",
    "request",
    "http",
    "ajax"
  ],
  "author": "Thorgate <info@thorgate.eu>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thorgate/tg-resources/issues"
  },
  "homepage": "https://github.com/thorgate/tg-resources#readme",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-eslint": "*",
    "babel-plugin-istanbul": "^3.0.0",
    "babel-plugin-transform-class-properties": "^6.11.5",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.9.0",
    "babel-runtime": "*",
    "body-parser": "^1.15.2",
    "chai": "^3.2.0",
    "cookie-parser": "^1.4.3",
    "coveralls": "*",
    "debug": "^2.2.0",
    "doctoc": "*",
    "eslint": "*",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-plugin-import": "^2.2.0",
    "express": "^4.14.0",
    "fs-extra": "*",
    "isparta": "*",
    "lodash.template": "*",
    "mocha": "^3.1.0",
    "nyc": "^10.0.0",
    "rimraf": "^2.5.2",
    "superagent": ">=1.4.0",
    "uuid": "3.0.1",
    "watch": "*"
  },
  "peerDependencies": {
    "babel-runtime": "*",
    "superagent": ">=1.4.0",
    "lodash.template": "*"
  },
  "dependencies": {
    "cookie": "0.2.2"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false
  }
}
